<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="003-add-qotd-banner-table" author="copilot">
        <createTable tableName="qotd_banner">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="channel_id" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="banner_text" type="VARCHAR(160)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <insert tableName="qotd_banner">
            <column name="channel_id" value="default"/>
            <column name="banner_text" value="Welcome to the Question of the Day!"/>
        </insert>
    </changeSet>

</databaseChangeLog>
